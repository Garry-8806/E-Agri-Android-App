                <!--android:layout_height="wrap_content"-->
                <!--android:inputType="textEmailAddress"-->
                <!--android:text="172.20.10.7:8084"-->
                <!--android:hint="Server IP Address" />-->
        <!--</android.support.design.widget.TextInputLayout>-->
    </LinearLayout>
</ScrollView>